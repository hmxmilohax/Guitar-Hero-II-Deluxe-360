{new GHScreen loading_screen
   (panels loading_panel)
   (allow_back FALSE)
   (animate_transition FALSE)
   (enter
      {$this reset_ambient})
   (TRANSITION_COMPLETE_MSG
         {ui goto_screen game_screen}
   )
}
